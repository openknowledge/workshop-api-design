<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="{\"logLevel\"=\"%-5p\", %d [%t] %c [TraceId: %X{traceId} / SpanId: %X{spanId}]: %L - %m%n%}"/>
        </Console>
        <RollingFile name="File" fileName="logs/app.log" filePattern="logs/app.%d{MM-dd-yyyy}.log">
            <TimeBasedTriggeringPolicy/>
            <PatternLayout>
                <Pattern>%d %-5p [%t] %c{1}: %m%n</Pattern>
            </PatternLayout>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
